(include "../../signature/rules/alethe.eo")
(include "../unit_test_services.eo")


; Unit tests for arith rules and related auxiliary services.

;---------------------------------
; $manipulate_inequality
;---------------------------------

; Some constants to build arith terms for testing purposes
(declare-const a Int)
(declare-const b Real)

; Case >
(step test true 
      :rule $assert_eq 
      :args (($manipulate_inequality (> 
                                      ($f_list_cons + ($f_list_cons * 1 a) 1)
                                      ($f_list_cons + ($f_list_cons * 1 b) 2)))

             (>= 
              (- ($f_list_cons * 1 a) ($f_list_cons * 1 b))
              (- 2 1))))

;---------------------------------
; $add_processed_inequalities
;---------------------------------

; Some constants to build arith terms for testing purposes
(declare-const a Int)
(declare-const b Real)

(step test true 
      :rule $assert_eq 
      :args (($add_processed_inequalities (and (> 1 2)
                                               (> 1 2)))
             (> 2/1 4/1)))
